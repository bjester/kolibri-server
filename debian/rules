#!/usr/bin/make -f
#export DH_VERBOSE = 1

%:
	dh $@ --with=systemd
override_dh_systemd_enable:
	dh_systemd_enable --name=kolibri-server

override_dh_compress:
	# Create nginx error pages
	kolibri manage loadingpage --output-dir $(CURDIR)/debian/kolibri-server/usr/share/kolibri/error_pages --version-text $(shell dpkg-parsechangelog -SVersion)
	dh_compress
